@model Mindful.Models.Grade
@{
    ViewBag.Title = "Create Grade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="teachers-container">
    <div class="teachers-layout">
        @Html.Partial("_SidebarPartial", "Grades")

        <main class="content">
            <div class="card shadow">
                <div class="card-header">
                    <h6>Create Grade</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="studentsid">Student</label>
                            <select name="studentsid" class="form-control" asp-items="ViewBag.StudentOptions"></select>
                        </div>

                        <div class="form-group">
                            <label for="subjectsid">Subject</label>
                            <select name="subjectsid" class="form-control" asp-items="ViewBag.SubjectOptions"></select>
                        </div>

                        <div class="form-group">
                            <label for="mark">Mark</label>
                            <input asp-for="mark" class="form-control" />
                        </div>

                        <div class="actions mt-3">
                            <button type="submit" class="add-btn">Save</button>
                            <a href="@Url.Action("Index", "Grade")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>
