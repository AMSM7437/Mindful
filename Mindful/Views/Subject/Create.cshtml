
@model Mindful.Models.Subject
@{
    ViewBag.Title = "Add Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="teachers-container">
    <div class="teachers-layout">
        <main class="content">
            <div class="card shadow">
                <div class="card-header">
                    <h6>@ViewBag.Title</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label asp-for="name"></label>
                            <input asp-for="name" class="form-control" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="passing_Grade"></label>
                            <input asp-for="passing_Grade" class="form-control" />
                            <span asp-validation-for="passing_Grade" class="text-danger"></span>
                        </div>
                        <div class="actions">
                            <button type="submit" class="add-btn">Save</button>
                            <a href="@Url.Action("Index", "Subject")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>
